{
    "manifest": {
        "displayName": "Home Pi",
        "invocationName": "Home Pi",
        "category": "HOME_CONTROL"
    },
    "actions": [
        {
            "name": "com.homepi.homeControl.actions.On",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.homepi.homeControl.intents.On",
                "parameters": [
                    {
                        "name": "device_name",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Turn on $SchemaOrg_Text:device_name"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "deviceExecution": {
                                    "command": "com.homepi.homeControl.commands.TurnOn",
                                    "params": {
                                        "device_name": "$device_name"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.homepi.homeControl.actions.Off",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.homepi.homeControl.intents.Off",
                "parameters": [
                    {
                        "name": "device_name",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Turn off $SchemaOrg_Text:device_name"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "deviceExecution": {
                                    "command": "com.homepi.homeControl.commands.TurnOff",
                                    "params": {
                                        "device_name": "$device_name"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.homepi.homeControl.actions.RequestIsOn",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.homepi.homeControl.intents.RequestIsOn",
                "parameters": [
                    {
                        "name": "device_name",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Check if I turned on $SchemaOrg_Text:device_name"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "deviceExecution": {
                                    "command": "com.homepi.homeControl.commands.RequestIsOn",
                                    "params": {
                                        "device_name": "$device_name"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.homepi.homeControl.media.actions.Play",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.homepi.homeControl.media.intents.Play",
                "parameters": [
                    {
                        "name": "title",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Play $SchemaOrg_Text:title"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "deviceExecution": {
                                    "command": "com.homepi.homeControl.media.commands.Play",
                                    "params": {
                                        "title": "$title"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "types": []
}